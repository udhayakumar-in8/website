<header>
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/blog">Blog</a></li>
      <li><a href="/about">About</a></li>
    </ul>
  </nav>
  <button class="mode-btn">Dark</button>
</header>

<script>

  ["/", "/blog", "/about"].forEach((path, idx) => {
    if (window.location.pathname == path)
      document.querySelector(`nav ul li:nth-child(${idx + 1})`)?.classList.add('active');
  })

  const button = document.querySelector('.mode-btn');

  const theme = localStorage.getItem('theme');
  if (theme)
    document.body.setAttribute('theme', theme);
  else
    document.body.setAttribute('theme', 'dark');

  button?.addEventListener('click', () => {
    let themed;
    const currentTheme = document.body.getAttribute('theme');
    if (currentTheme == 'dark')
      themed = 'light';
    else
      themed = 'dark';
    document.body.setAttribute('theme', themed);
    localStorage.setItem('theme', themed);
  });
</script>

