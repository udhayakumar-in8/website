  header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-top: 1rem;
    margin-bottom: 2rem;
    font-size: 1.2rem;
  }

  header ul {
    display: flex;
    flex-direction: row;
    justify-content: left;
    align-items: center;
    list-style-type: none;
  }

  header ul li {
    padding: 1rem 1.5rem;
  }

  header nav ul li:first-child() {
    padding: 1rem 1.5rem 1rem 0rem;
  }

  header ul li a {
    text-decoration: none;
  }

  header ul li a:hover {
    text-decoration: underline;
  }

  header ul li a:visited {
    text-decoration: none;
  }

  .mode-btn {
    cursor: pointer;
  }

  .active {
    font-weight: 800;
  }
</style>
