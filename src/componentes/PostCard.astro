---
const { title, index } = Astro.props;
---

<div class="post-card">
	<span>{index}</span>
	<p>{title}</p>
</div>

<style>
	div > p {
		display: inline-block;
		font-size: 1.1rem;
		font-weight: 500;
		padding: 0;
		margin: 0;
	}
	span {
		font-size: 1.1rem;
		opacity: .7;
		padding-right: .2rem;
		padding: 0;
	}
	.post-card {
		padding: .5rem 0;
		border-bottom: 1px solid var(--color-text);
	}
</style>
